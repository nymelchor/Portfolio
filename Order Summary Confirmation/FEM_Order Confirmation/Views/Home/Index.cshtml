@{
    ViewData["Title"] = "Home Page";
}
<!--- style="outline-style:solid;color:red" --->
<div class="d-flex justify-content-center align-items-center">
    <div class="card text-center">
        <img src="@Url.Content("~/imgs/illustration-hero.svg")" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">Order Summary</h5>
            <p class="card-text">You can now listen to millions of songs, audiobooks, and podcasts on any device anywhere you like!</p>
            <form>
                <div class="form-group">
                    <button type="button" class="btn btn-primary btn-block">Proceed to Payment</button>
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-link">Cancel Order</button>
                </div>
            </form>
        </div>
    </div>
</div>